@page
@model INVENTAR.IO.Pages.DeleteModel
@{
	ViewData["Title"] = "Delete";
}
<div class="container">
	<h1>Are you sure you want to delete this?</h1>
	<br />
	<div style="width: 70%;">
		<div class="row justify-content-between">
			<p class="col-3 fw-bold">@Html.DisplayNameFor(model => model.Product.ProductName):</p>
			<p class="col-9 justify-content-end">@Html.DisplayFor(model => model.Product.ProductName)</p>
		</div>
		<div class="row justify-content-between">
			<p class="col-3 fw-bold">@Html.DisplayNameFor(model => model.Product.ProductModel):</p>
			<p class="col-9 justify-content-end">@Html.DisplayFor(model => model.Product.ProductModel)</p>
		</div>
		<div class="row justify-content-between">
			<p class="col-3 fw-bold">@Html.DisplayNameFor(model => model.Product.ProductDescription):</p>
			<p class="col-9 justify-content-end">@Html.DisplayFor(model => model.Product.ProductDescription)</p>
		</div>
		<div>
			<form method="post">
				<input type="hidden" asp-for="Product.ProductId" />
				@* <input class="form-control" id="confirmDelete" type="text" placeholder="To delete write &quot;@Html.DisplayFor( model => model.Departments.DepartmentName )&quot;" /> *@
				<br />
				<a asp-page="./Index" asp-route-id="@Model.Product.ProductId" class="btn btn-outline-theme">Back</a>
				<input @* disabled *@ type="submit" class="btn btn-theme" value="Delete" />
			</form>
		</div>
	</div>
</div>
