@page
@model INVENTAR.IO.Pages.User.IndexModel
@{
    ViewData["Title"] = "Colaborators";
}
<div class="container">
    <div class="list-header">
        <h3>@ViewData["Title"]</h3>
        <a asp-page="Create" class="btn btn-theme">Add</a>
    </div>
    @if (TempData["Message"] != null)
    {
        <p class="text-danger">@TempData["Message"]</p>
    }
    <br />
    <div>
        <table class="table table-hover table-responsive">
            <thead>
                <tr>
                    <th class="col-4" scope="col">@Html.DisplayNameFor(model => model.Colaborators[0].ColaboratorName)</th>
                    <th class="col-3" scope="col">@Html.DisplayNameFor( model => model.Colaborators[ 0 ].ColaboratorEmail )</th>
                    <th class="col-3" scope="col">@Html.DisplayNameFor( model => model.Colaborators[ 0 ].Department.DepartmentName )</th>
                    <th class="col-2" scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var colaborator in Model.Colaborators)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => colaborator.ColaboratorName)</td>
                        <td>@Html.DisplayFor(model => colaborator.ColaboratorEmail)</td>
                        <td>@Html.DisplayFor(model => colaborator.Department.DepartmentName)</td>
                        <td style="display: -moz-inline-box" align="right">
                            <a asp-page="./Edit" asp-route-id="@colaborator.ColaboratorId" class="btn btn-outline-theme">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@colaborator.ColaboratorId" class="btn btn-outline-theme">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>