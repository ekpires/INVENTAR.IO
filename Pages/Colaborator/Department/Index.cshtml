@page
@model INVENTAR.IO.Pages.User.Department.IndexModel
@{
    ViewData["Title"] = "Departments";
}



<div class="container">
    <div class="list-header">
        <h3>@Html.DisplayNameFor(model => model.Departments[0].DepartmentName)</h3>
        <a asp-page="Create" class="btn btn-theme">Add</a>
    </div>
    @if (TempData["Message"] != null)
    {
        <p class="text-danger">@TempData["Message"]</p>
    }
    <br />
    <div>
        <table class="table table-hover table-responsive">
            <tbody>
                @foreach (var department in Model.Departments)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => department.DepartmentName)</td>
                        <td align="right">
                            <a asp-page="./Edit" asp-route-id="@department.DepartmentId" class="btn btn-outline-theme">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@department.DepartmentId" class="btn btn-outline-theme">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>