@page
@model IndexModel
@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <div class="list-header">
        <h3>@ViewData["Title"]</h3>
        <a asp-page="Create" class="btn btn-theme">Add</a>
    </div>
    @if (TempData["Message"] != null)
    {
        <p class="text-danger">@TempData["Message"]</p>
    }
    <br />
    <div>
        <table class="table table-hover table-responsive">
            <thead>
                <tr>
                    <th class="col-5" scope="col">@Html.DisplayNameFor(model => model.Products[0].ProductName)</th>
                    <th class="col-5" scope="col">@Html.DisplayNameFor(model => model.Products[0].ProductModel)</th>
                    <th class="col-2" scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr class="clicable-line">
                        <td><a asp-page="./View" asp-route-id="@product.ProductId">@Html.DisplayFor(model => product.ProductName)</a></td>
                        <td><a asp-page="./View" asp-route-id="@product.ProductId">@Html.DisplayFor(model => product.ProductModel)</a></td>
                        <td style="display: -moz-inline-box" align="right">
                            <a asp-page="./Edit" asp-route-id="@product.ProductId" class="btn btn-outline-theme">Edit</a>
                        </td>
                    </tr>                    
                }
            </tbody>
        </table>
    </div>
</div>
